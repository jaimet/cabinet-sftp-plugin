<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_action_close</item>
    </style>

    <style name="FormEntryInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/host</item>
        <item name="android:inputType">textUri</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!--suppress AndroidDomInspection -->
    <style name="FormEntryLabel" tools:ignore="NewApi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

</resources>